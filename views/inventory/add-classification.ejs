<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

      <form action="/inv/add-classification" method="POST" id="addClassificationForm">
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input type="text" class="form-control" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9]+">
            <small id="nameHelp" class="form-text text-muted">Classification name cannot contain spaces or special characters.</small>
        </div>
        <button type="submit" class="btn btn-primary">Add Classification</button>
    </form>