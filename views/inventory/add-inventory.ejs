<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

      <h1>Add New Vehicle to Inventory</h1>
    <form action="/inv/add-inventory" method="POST" id="addInventoryForm">
        <!-- inv_make input -->
        <label for="inv_make">Make:</label>
        <input type="text" class="form-control" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>">
        <div></div>
        <!-- inv_model input -->
        <label for="inv_model">Model:</label>
        <input type="text" class="form-control" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>">
        <div></div>
        <!-- inv_year input -->
        <label for="inv_year">Year:</label>
        <input type="number" class="form-control" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>">
        <div></div>
        <!-- inv_description input -->
        <label for="inv_description">Description:</label>
        <input type="text" class="form-control" id="inv_description" name="inv_description" required value="<%= locals.inv_description %>">
        <div></div>
        <!-- inv_image input -->
        <label for="inv_image">Path to Image:</label>
        <input type="text" class="form-control" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>">   
        <div></div>
        <!-- inv_thumbnail input -->
        <label for="inv_thumbnail">Path to Thumbnail:</label>
        <input type="text" class="form-control" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">
        <div></div>
        <!-- inv_price input -->
        <label for="inv_price">Price:</label>
        <input type="text" class="form-control" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>">
        <div></div>
        <!-- inv_miles input -->
        <label for="inv_miles">Miles:</label>
        <input type="number" class="form-control" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>">
        <div></div>
        <!-- inv_color input -->
        <label for="inv_color">Color:</label>
        <input type="text" class="form-control" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>">
        <div></div>
        <!-- classification_id input -->
        <label for="classification">Classification:</label>
        <select name="classification_id" id="classificationList" required>
            <option value="">Choose a Classification</option>
            <% classifications.forEach(classification => { %>
                <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
            <% }); %>
        </select>
        <div></div>
        <!-- Submit Button -->
        <button type="submit">Add to Inventory</button>
    </form>